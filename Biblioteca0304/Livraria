package Biblioteca0304;

public class Livraria {
	
	private String editora, autor, livro;
	private int quantidade, codigo;
	private double preco;
	
	public void setCodigo(int codigo) {
		this.codigo = codigo;
	}
	
	public void setEditora(String editora) {
		this.editora = editora;
	}

	public void setAutor(String autor) {
		this.autor = autor;
	}

	public void setLivro(String livro) {
		this.livro = livro;
	}
	
	public void setQuantidade(int quantidade) {
		this.quantidade = quantidade;
	}

	public void setPreco(double preco) {
		this.preco = preco;
	}

	public int getCodigo() {
		return codigo;
	}
		
	public String getEditora() {
		return editora;
	}
	
	public String getAutor() {
		return autor;
	}
	
	public String getLivro() {
		return livro;
	}
	
	public int getQuantidade() {
		return quantidade;
	}
	
	public double getPreco() {
		return preco;
	}

	public void Informa_Livros(l.getCodigo()) {
		
		switch(codigo) {
		
		case 1: JOptionPane.showMessageDialog(null, "Categoria Romance \n" +
		"Livro: " + l.getLivro() +
		"\n Editora: " + l.getEditora() +
		"\n Autor:" + l.getAutor() +
		"\n Quantidade: " + l.getQuantidade() +
		"\n Preço: " + l.getPreco(), "", JOptionPane. PLAIN_MESSAGE); break;
		
		case 2: JOptionPane.showMessageDialog(null, "Categoria Suspense \n" +
	    "Livro: " + l.getLivro() +
		"\n Editora: " + l.getEditora() +
		"\n Autor: " + l.getAutor() +
		"\n Quantidade: " + l.getQuantidade() +
		"\n Preço: " + l.getPreco(), "", JOptionPane. PLAIN_MESSAGE); break;
		
	    case 3: JOptionPane.showMessageDialog(null, "Categoria Ficcao \n" +
	    "Livro: " + l.getLivro() +
	    "\n Editora: " + l.getEditora() +
	    "\n Autor:" + l.getAutor() +
	    "\n Quantidade: " + l.getQuantidade() +
	    "\n Preço: " + l.getPreco(), "", JOptionPane. PLAIN_MESSAGE); break;
	    
	    default: System.out.println("Código não corresponde a nenhuma categoria de livro");
	    
		
		}		
   

}